{
  "name": "usb-commander",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "scripts": {
    "dev": "yarn dev:proto && yarn dev:parallel",
    "dev:proto": "powershell -ExecutionPolicy Bypass -File scripts/generate_proto.ps1",
    "dev:parallel": "concurrently \"yarn dev:vite\" \"yarn dev:electron-build\" \"yarn dev:electron\"",
    "dev:vite": "vite --host 0.0.0.0",
    "dev:electron-build": "vite build -c vite.electron.config.js --watch",
    "dev:electron": "wait-on tcp:1624 && wait-on ./electron.js && electron .",
    "clean": "rimraf dist && rimraf dist_electron || true",
    "copy-files": "node scripts/copy-electron-files.js",
    "build:web": "vite build",
    "build:electron": "vite build -c vite.electron.config.js",
    "build": "yarn dev:proto && yarn build:web && yarn build:electron",
    "package": "yarn build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "ccxz84.usb.commander",
    "productName": "HID-Commander",
    "asar": false,
    "directories": {
      "output": "dist_electron",
      "buildResources": "assets"
    },
    "files": [
      "electron.js",
      "dist/**/*",
      "assets/**/*",
      "popup.html"
    ],
    "extraResources": [
      {
        "from": "generated",
        "to": "generated",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": {
    "name": "ccxz84",
    "email": "your.email@example.com"
  },
  "description": "USB HID Commander Application",
  "dependencies": {
    "@grpc/grpc-js": "^1.9.13",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/google-protobuf": "^3.15.12",
    "bindings": "^1.5.0",
    "electron-is-dev": "^2.0.0",
    "google-protobuf": "^3.21.2",
    "hangul-js": "^0.2.6",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "play-sound": "^1.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.16.1",
    "react-router-dom": "^6.27.0",
    "sound-play": "^1.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "util": "^0.12.5",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@tanstack/eslint-plugin-query": "^5.6.0",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.8.7",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vanilla-extract/vite-plugin": "^3.9.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.3.11",
    "electron-builder": "^22.11.7",
    "electron-rebuild": "^3.2.9",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-sort-exports": "^0.8.0",
    "grpc-tools": "^1.12.4",
    "rimraf": "^6.0.1",
    "sass": "^1.69.5",
    "vite": "^4.4.5",
    "vite-plugin-svgr": "^3.2.0",
    "wait-on": "^7.0.1",
    "ts-proto": "^1.165.3"
  }
}
